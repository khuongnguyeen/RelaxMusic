<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
   <androidx.cardview.widget.CardView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       app:cardBackgroundColor="@android:color/transparent"
       app:cardCornerRadius="@dimen/_14sdp"
       >
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:background="@color/bg_layout"
           android:minWidth="@dimen/_230sdp">
           <TextView
               android:id="@+id/tv_momo"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="NGUYEN DUY KHUONG"
               android:textColor="@color/color_white"
               android:gravity="center"
               android:fontFamily="@font/ko2"
               android:textSize="@dimen/_15sdp"
               android:layout_marginTop="@dimen/_15sdp"
               />
           <TextView
               android:layout_below="@+id/tv_momo"
               android:id="@+id/tv_sdt_momo"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="0343318686"
               android:textColor="@color/color_white"
               android:gravity="center"
               android:fontFamily="@font/ko2"
               android:textSize="@dimen/_20sdp"
               android:layout_marginTop="@dimen/_15sdp"
               />

           <ImageView
               android:layout_below="@+id/tv_sdt_momo"
               android:id="@+id/iv_momo"
               android:layout_marginTop="@dimen/_38sdp"
               android:layout_width="@dimen/_230sdp"
               android:layout_height="@dimen/_230sdp"
               android:src="@drawable/momo"
               android:layout_marginBottom="@dimen/_38sdp"
               android:layout_centerInParent="true"
               />








       </RelativeLayout>
   </androidx.cardview.widget.CardView>
</layout>